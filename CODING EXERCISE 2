package assignment;
import java.util.Scanner;
public class A2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanMe = new Scanner (System.in);
		
		System.out.println("Enter yearly interest rate: ");
		double interest = scanMe.nextDouble();
		System.out.println("Enter number of years: ");
		int years = scanMe.nextInt();
		System.out.println("Enter loan amount: ");
		double loan = scanMe.nextDouble();
		
		double a = loan* (interest / 100);
		double b = (years*12) * 3.5 /100 * loan;
		
		System.out.print("The monthly payment is $ ");
		System.out.println(a);
		System.out.print("The total payment is $");
		System.out.println(b);
				
		
	}

}
